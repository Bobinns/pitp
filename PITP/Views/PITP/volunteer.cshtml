                        email: "Please enter a valid email address",
                        required: "Email is required (we promise not to spam you!)"
                    },
                    Name: { required: "You forgot to enter your name!" },
                    Over18: { required: "Please Select Either Yes or No" },
                    CRB: { required: "Please Select Either Yes or No" },
                    FirstAid: { required: "Please Select Either Yes or No" }
            },

            
            highlight: function (element) {
                $(element).closest('.form-group').addClass('has-error');
            },
            unhighlight: function (element) {
                $(element).closest('.form-group').removeClass('has-error');
            },
            errorElement: 'span',
            errorClass: 'help-block',

            errorPlacement: function (error, element) {
                if (element.parent('.checkbox-inline').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            }
        });
