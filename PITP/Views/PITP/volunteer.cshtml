@if (@ViewData["Sent"] != "sent")
{
    <div class="intro-block2 topblock">
        <div class="container">
            <div class="row">
                <div class="col-xs-3">
                    <img class="img-responsive tpad" src="img/vol.png">
                </div>
                <div class="col-xs-9">
                    <h1>Party In The Park <span class="text-muted qback">&raquo; Get involved!</span></h1>
                    <p class="lead">
                        If you would like to get involved with this exciting, free, community festival - then we would love to have you on board.
                    </p>
                    <p>We are looking for people who can contribute with the following</p>
                    <ul>
                        <li>Stewarding </li>
                        <li>Parking Stewards</li>
                        <li>flyer & poster distribution</li>
                        <li>Site build, decor & strike</li>
                        <li>Technical/sound engineers/stage management/stage runners/comperes/carpenters</li>
                    </ul>
                    <p>We particularly need<b class="text-muted2"><em>STEWARDS!</em></b></p>
                    <p><b class="text-muted2">What we can give you</b></p>
                    <ul>
                        <li>
                            Excellent work experience and references
                        </li>
                        <li>The chance to contribute to an exciting community event</li>
                        <li>One day certificated first aid training (places are limited!) </li>
                        <li>A free food voucher from any of the food stalls on the day</li>
                        <li>A free drink voucher</li>
                        <li>Free entry to after party event</li>
                    </ul>
                    <p><b><i>Watch this space for the job roles, specifications and application form. Interviews to take place in the first week of July.</i></b></p>
                </div>
            </div>
        </div>
    </div>
    <!-- End Intro Text -->
    <div class="container padded batop">
        <div class="row">
            <div class="col-sm-8">
                <h2>To apply </h2>
                <hr class="borback">
                <p>If you wish to help out in any way possible please use the form below to contact us.</p>

                @using (Html.BeginForm("Volunteer", "PITP", FormMethod.Post, new { @class = "form-horizontal tpad", role = "form" }))
                {

                    <div class="form-group">
                        @Html.LabelFor(c => c.Name)
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Name, new { type = "text", @class = "form-control", id = "Name", placeholder = "Name" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group tpad">
                        @Html.LabelFor(c => c.Email)
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "email", placeholder = "Email...", type = "email" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group tpad">
                        @Html.LabelFor(c => c.Telephone)
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control", id = "telphone", placeholder = "Telephone.", type = "telephone" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">

                            @Html.LabelFor(x => x.Over18, new { @class = "control-label" })
                            <div>
                                @foreach (var item in Model.Over18)
                                {
                                    <label class="checkbox-inline">
                                        <input type="checkbox" name="Over18" value="@item" > @item
                                    </label>
                                }
                                
                            </div>
                            @*@Html.ValidationMessageFor(model => model.Over18)*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(x => x.InterestedRoles, new { @class = "control-label" })
                            <div>
                                @foreach (var item in Model.InterestedRoles)
                                {
                                    <label class="checkbox-inline">
                                        <input type="checkbox" name="InterestedRoles" value="@item"> @item
                                    </label>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(x => x.Skills, new { @class = "control-label" })
                            <div>
                                @foreach (var item in Model.Skills)
                                {
                                    <label class="checkbox-inline">
                                        <input type="checkbox" name="Skills" value="@item"> @item
                                    </label>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(x => x.CRB, new { @class = "control-label" })
                            <div>
                                @foreach (var item in Model.CRB)
                                {
                                    <label class="checkbox-inline">
                                        <input type="checkbox" name="CRB" value="@item"> @item
                                    </label>
                                }
                                @Html.ValidationMessageFor(model => model.Over18)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(x => x.FirstAid, new { @class = "control-label" })
                            <div>
                                @foreach (var item in Model.FirstAid)
                                {
                                    <label class="checkbox-inline">
                                        <input type="checkbox" name="FirstAid" value="@item"> @item
                                    </label>
                                }
                            </div>
                        </div>

                    </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="madcap">Madcap is a voluntary organisation bringing urban fetes, clowns and fun to many local events. Madcap will be stationed in Fordham Park 2 weeks before the festival for 1 week working with local kids creating decorations for the festival and carnival creations for the procession on the day of the festival. If you have experience working with children and would like to volunteer on this creative and rewarding project, then please tick the Yes box below!</label>
                                    <div><label class="checkbox-inline">
                                            @Html.CheckBoxFor(x => x.MadCap) Yes</label>
                                        </div>
                                    </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="submit" value="Send" class="btn btn-default btn-lg" />
                                </div>
                            </div>

                }
            </div>

            <div class="col-sm-4">
                <img class="img-circle img-responsive" src="~/img/sam.png">
                <hr class="borback">
                <address>
                    <h3>New Cross Learning</h3>
                    283 – 285 New Cross Road<br>
                    London, SE14 6AS<br>
                    <a href="mailto: vols@pitpnxd.co.uk">vols@pitpnxd.co.uk</a><br>
                    <abbr title="Phone">P:</abbr>0208 320 0813
                </address>
            </div>
        </div>
    </div>
}
else
{
    <div class="intro-block2">
        <div class="container">
