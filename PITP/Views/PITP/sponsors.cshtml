<div class="container padded batop">
    <div class="row">
        <div class="col-sm-8">
            <h2>Get in touch</h2>
            <hr class="borback">
            <p>If you wish to enquire about sponsorship, please use the form below to contact us.</p>
            @using (Html.BeginForm("sponsors", "PITP", FormMethod.Post, new { @class = "form-horizontal tpad", role = "form" }))
            {               
                <div class="form-group">
                    <label for="email" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.Email, new { type = "email", @class = "form-control", id = "email", placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group tpad">
                    <label for="message" class="col-lg-2 control-label">Message</label>
                    <div class="col-lg-10">
                        @Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = "6", id = "message", placeholder = "Message..." })
                    </div>
                </div>
                <div class="form-group tpad">
                    <div class="col-lg-offset-2 col-lg-10">
                        @*<a data-toggle="modal" href="#myModal" class="btn btn-default btn-lg">Send</a>*@
                        @*<input type="submit" value="Send" class="btn btn-default btn-lg" />*@
                        <input type="submit" value="Send" />
                    </div>
                </div>                
            }
        </div>
        <div class="col-sm-4">
            <img class="img-circle img-responsive" src="img/ba.jpg">
            <hr class="borback">
            <address>
                <h3>New Cross Learning</h3>
                283 – 285 New Cross Road<br>
                London, SE14 6AS<br>
                <a href="mailto: pitpnxd@gmail.com">pitpnxd@gmail.com</a><br>
                <abbr title="Phone">P:</abbr>0208 320 0813
            </address>
        </div>
    </div>
</div>
